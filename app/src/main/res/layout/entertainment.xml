<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/vertical_margin"
    android:paddingLeft="@dimen/horizontal_margin"
    android:paddingRight="@dimen/horizontal_margin"
    android:paddingTop="@dimen/vertical_margin"
    tools:context=".Entertainment">


    <ImageView
        android:layout_width="@dimen/width3"
        android:layout_height="@dimen/height3"
        android:src="@drawable/musician"
        android:layout_marginTop="@dimen/top3"
        android:scaleType="fitCenter"
        android:id="@+id/imgEntertainment"
   />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="@dimen/height1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/top1"
        android:paddingLeft="@dimen/paddingL"
        android:onClick="Answer1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:id="@+id/rdgEntertainment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtMovie"
            android:paddingTop="@dimen/paddingT"
            android:text="@string/music"
            style="@style/textView"
            android:layout_marginLeft="@dimen/marginL"
            android:layout_marginTop="@dimen/marginT"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textView"
            android:text="@string/musicA"
            android:layout_marginTop="@dimen/marginTop"
            android:id="@+id/rdbA1" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTop"
            android:text="@string/musicA1"
            style="@style/textView"
            android:id="@+id/rdbA2" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTop"
            android:text="@string/musicA2"
            style="@style/textView"
            android:id="@+id/rdbA3" />

    </RadioGroup>


    <ImageView
        android:layout_width="@dimen/width2"
        android:layout_height="@dimen/height2"
        android:id="@+id/btnSave"
        android:onClick="saveAnswer"
        android:src="@drawable/save1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"

     />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textView1"
        android:id="@+id/txttimer"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/marginR"
        android:layout_marginEnd="@dimen/marginE"
        android:layout_marginTop="@dimen/marginTo" />


</RelativeLayout>
